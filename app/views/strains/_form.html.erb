<%= form_for(@strain, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @strain.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@strain.errors.count, "error") %> prohibited this strain from being saved:</h4>

      <ul>
      <% @strain.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :"Strain Code", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :strain_code, class: "form-control", placeholder: "Unique code for use on farm.  Ex. Amycel3015A", :autofocus => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :"Original Source", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :source_original, class: "form-control", placeholder: "ex. Amycel, Aloha, Fungi Perfecti..."  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :"Commercial Name", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :commercial_name, class: "form-control", placeholder: "ex. Aloha 3782" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :"Common Name", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :common_name, class: "form-control", placeholder: "ex. Shiitake" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :"Latin Name", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :latin_name, class: "form-control", placeholder: "ex. Lentinula edodes"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :"Form Recieved", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :latin_name, class: "form-control", placeholder: "ex. slant, petri, wedge, spawn, wild clone" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :"Date Acquired", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :date_acquired, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :"Notes", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :notes, class: "form-control" %>
    </div>
  </div>

    <div class="form-group">
    <%= f.label :"Photo URL", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.url_field :photo_url, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= f.label :"Check if not in production", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :completed, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

