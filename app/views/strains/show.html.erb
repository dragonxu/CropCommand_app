<div class="page-header">
 <%= link_to strains_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back to Strains List
  <% end %>
  <%= link_to edit_strain_path(@strain), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit This Strain
  <% end %>
  <h1>Strain Details</h1>
</div>

<dl class="dl-horizontal">
  <dt>Strain Code</dt>
  <dd><%= @strain.strain_code %></dd>

  <dt>Original Source</dt>
  <dd><%= @strain.source_original %></dd>

  <dt>Commecial Name</dt>
  <dd><%= @strain.commercial_name %></dd>

  <dt>Common Name</dt>
  <dd><%= @strain.common_name %></dd>

  <dt>Latin Name</dt>
  <dd><%= @strain.latin_name %></dd>

  <dt>Form Recieved</dt>
  <dd><%= @strain.form_received %></dd>

  <dt>Date Acquired</dt>
  <dd><%= @strain.date_acquired %></dd>

  <dt>Active:</dt>
  <dd><%= @strain.completed %></dd>

  <dt>Created:</dt>
  <dd><%= @strain.created_at %></dd>

</dl>

<div class="row-fluid">
  <div class="span4 offset2 well well-sm">
    <dl class="dl-horizontal">
     <dt>Notes</dt>
      <dd><%= @strain.notes %></dd>
     <dt> Photo</dt>
     <dd><%=image_tag(@strain.photo_url, :width => 300) do %>
      <%= content_tag(@strain.common_name) %>
      <% end %>
      </dd>
    </dl>
  </div>
</div>
  <div class="span4 offset6">
    <img> </img>
  </div>
</div>

