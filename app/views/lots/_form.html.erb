<%= form_for(@lot, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @lot.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@lot.errors.count, "error") %> prohibited this lot from being saved:</h4>

      <ul>
      <% @lot.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :"Strain Code", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.select :strain_code_id, options_for_select( Strain.all.collect {|p| [ p.strain_code, p.id ] }, { include_blank: false }) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :lot_code, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :lot_code, class: "form-control", placeholder: "ex. strain code plus date(day/month)= 3782A-07/11" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :"Date made", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :event_made, class: "form-control", placeholder: "date of innoculation" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :"Date to shake" , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :event_shake, class: "form-control", placeholder: "Date to shake filter patch bags if needed" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :"Date to cold shock", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :event_chill, class: "form-control", placeholder: "Date to open filer patch bags and cold shock if needed" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :"Date to remove", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :event_remove, class: "form-control", placeholder: "Date to remove from production" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :"Number of weeks in cycle", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :cycle_weeks, class: "form-control", placeholder: "Number of weeks in production" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :"Type of container and size", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :units_type, class: "form-control", placeholder: "ex. Unicorn Bag 3T, 5 lbs"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :"Number of bags made", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :units_number, class: "form-control", placeholder: "ex. 80" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :"Check if active, uncheck after pruduction run is complete", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :active, class: "form-control", placeholder: "check box if lot is no longer in production" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
